				},
				"source": [
					"vm_cost_df = cost_df.where(F.col('Date') >= vm_start_date)\r\n",
					"sql_cost_df = cost_df.where(F.col('Date') == sql_start_date)"
				],
				"execution_count": 123
			},
			{
				"cell_type": "code",
