						}
					}
				},
				"source": [
					"subscription_df = subscription_df.where(subscription_df.OperationalStatus != 'Ignored')"
				],
				"execution_count": 7
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
